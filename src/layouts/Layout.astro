---
import { ClientRouter } from 'astro:transitions'

import '@/styles/global.css'

import Header from '@/components/Header.astro'
import Footer from '@/components/Footer.astro'
import Eventos from '@/components/Eventos.astro'
import Contacto from '@/components/Contacto.astro'
import Redes from '@/components/Redes.astro'
import Marcas from '@/components/Marcas.astro'
import Servicios from '@/components/Servicios.astro'
import Hero from '@/components/Hero.astro'

import { fixedTitle } from '@/consts/pageTitles'
interface Props {
  title: string
}

const { title = fixedTitle } = Astro.props
---

<!doctype html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <title>Olavarría Sonido - Producción técnica y sonido en vivo</title>
      
        <link rel="icon" type="image/png" href="https://github.com/Bastianinacap2025/olavarriasonido/blob/main/public/favicon_medium.png?raw=true" />
      
        <link
          rel="preload"
          href="/images/hero.avif"
          as="image"
          type="image/avif"
          crossorigin="anonymous"
        />
      
        <!-- Preload de las fuentes para que no se vea el cambio de fuente al cargar la pagina -->
        <link
          rel="preload"
          href="/fonts/anisette-medium.woff2"
          as="font"
          type="font/woff2"
          crossorigin="anonymous"
        />
        <link
          rel="preload"
          href="/fonts/anisette-light.woff2"
          as="font"
          type="font/woff2"
          crossorigin="anonymous"
        />
        <link
          rel="preload"
          href="/fonts/anisette-bold.woff2"
          as="font"
          type="font/woff2"
          crossorigin="anonymous"
        />
        <link
          rel="preload"
          href="/fonts/anisette-black.woff2"
          as="font"
          type="font/woff2"
          crossorigin="anonymous"
        />
        <meta
          name="description"
          content="Olavarría Sonido - Producción técnica, sonido en vivo y eventos. Garantía de calidad en cada presentación."
        />
      
        <meta property="og:url" content="https://www.olavarriasonido.cl" />
        <meta property="og:type" content="website" />
        <meta property="og:title" content="Olavarría Sonido - Producción y sonido en vivo" />
        <meta
          property="og:description"
          content="Olavarría Sonido es tu solución para eventos con producción técnica, sonido en vivo y equipos de calidad."
        />
        <meta property="og:image" content="public/images/og.png" />
        <meta property="og:locale" content="es_CL" />
        <meta property="og:site_name" content="Olavarría Sonido" />
      
        <meta name="twitter:card" content="summary_large_image" />
        <meta name="twitter:site" content="@OlavarriaSonido" />
        <meta name="twitter:creator" content="@CristianOlavarria" />
        <meta name="twitter:title" content="Olavarría Sonido - Producción y sonido en vivo" />
        <meta
          name="twitter:description"
          content="Olavarría Sonido ofrece servicios de sonido en vivo, producción técnica, y más para eventos en Chile."
        />
        
        <ClientRouter />
      </head>
  <body>
    <Header />
    <main>
        <Hero />
        <Marcas />
        <Servicios />
        <Redes />
        <Eventos />
        <Contacto />
    </main>
    <Footer />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    background: #161117;
    display: flex;
    flex-direction: column;
  }
</style>
